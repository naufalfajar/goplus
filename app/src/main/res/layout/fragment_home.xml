<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/its_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment">

    <View
        android:id="@+id/bg_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="@id/ll_menu"
        android:background="@drawable/bg_home"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_current_loc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_loc_and_menu"
            android:orientation="horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ic_location"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/cv_ic_location"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/its_white"
                    android:textSize="11sp"
                    android:text="@string/lokasi_anda"/>

                <TextView
                    android:id="@+id/tv_flex_location"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/its_white"
                    android:textColorHint="@color/its_white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="Lokasi Anda Saat Ini"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_menu_hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_pengaturam"
                android:src="@drawable/baseline_menu_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/namaemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:hint="@string/nama_pengguna"
            android:textColorHint="@color/its_white"
            android:textColor="@color/its_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_loc_and_menu"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:inputType="text"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/its_grey"
        android:hint= "@string/kemana_anda_ingin_pergi"
        android:textColorHint="@color/its_blue"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_current_loc"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_go_plus"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/its_blue"
                    android:text="Go+"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Go+"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_history"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="@string/riwayat"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_schedule"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_date_range_24"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="@string/jadwal"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Space
        android:id="@+id/sp_after_llmenu"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_menu"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/place_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/tempat_terdekat"
        android:textStyle="bold"
        android:textColor="@color/its_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_after_llmenu"/>

    <Space
        android:id="@+id/sp_after_placenearby"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/place_nearby"
        app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_place"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:paddingBottom="500dp"
            android:clipToPadding="false"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/sp_after_placenearby"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ProgressBar
        android:id="@+id/pb_rv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/place_nearby"
        app:layout_constraintBottom_toBottomOf="parent" />

<!--   delete soon-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtn_logout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>