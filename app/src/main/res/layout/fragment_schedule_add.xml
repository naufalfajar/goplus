<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/its_white"
    tools:context=".view.ScheduleAddFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/its_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationContentDescription="Kembali"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            app:navigationIconTint="@color/its_blue"
            app:titleTextColor="@color/its_blue"
            app:title="@string/jadwal"
            app:titleCentered="true"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/et_place"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="12dp"
        android:drawableTint="#362FD9"
        android:paddingStart="12dp"
        android:inputType="text"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/its_second_blue"
        android:hint= "Tempat"
        android:textColorHint="@color/its_blue"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:id="@+id/et_date"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_date_range_24"
        android:drawablePadding="12dp"
        android:drawableTint="#362FD9"
        android:paddingStart="12dp"
        android:inputType="date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/its_second_blue"
        android:hint= "Tanggal"
        android:textColorHint="@color/its_blue"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_place"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:id="@+id/et_time"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_access_time_24"
        android:drawablePadding="12dp"
        android:drawableTint="#362FD9"
        android:paddingStart="12dp"
        android:inputType="time"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/et_border"
        android:backgroundTint="@color/its_second_blue"
        android:hint= "Waktu"
        android:textColorHint="@color/its_blue"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_date"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/mbtn_save"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/its_yellow"
        android:text="Simpan"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>