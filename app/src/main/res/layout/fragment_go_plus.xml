<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/its_white"
    tools:context=".view.GoPlusFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/its_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationContentDescription="Kembali"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            app:navigationIconTint="@color/its_blue"
            app:titleTextColor="@color/its_blue"
            app:title="Go+"
            app:titleCentered="true"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"/>
    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/dot_location_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_location"
            app:layout_constraintTop_toTopOf="@id/et_start"
            app:layout_constraintBottom_toBottomOf="@id/et_start"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_start"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="14dp"
            android:paddingStart="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:background="@drawable/et_border"
            android:backgroundTint="@color/its_grey"
            android:hint= "@string/dari_lokasi_anda_saat_ini"
            android:textColorHint="@color/its_blue"
            android:textColor="@color/its_blue"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="bottom"
            app:layout_constraintStart_toEndOf="@id/dot_location_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/dot_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_dot"
            app:layout_constraintTop_toBottomOf="@id/dot_location_start"
            app:layout_constraintBottom_toTopOf="@id/dot_location_1"
            app:layout_constraintStart_toStartOf="@id/dot_location_1"
            app:layout_constraintEnd_toEndOf="@id/dot_location_1"/>

        <ImageView
            android:id="@+id/dot_location_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_location"
            app:layout_constraintTop_toTopOf="@id/et_pemberhentian_1"
            app:layout_constraintBottom_toBottomOf="@id/et_pemberhentian_1"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_pemberhentian_1"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="14dp"
            android:paddingStart="20dp"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:backgroundTint="@color/its_grey"
            android:hint= "@string/kemanakah_anda_ingin_pergi"
            android:textColorHint="@color/its_blue"
            android:textColor="@color/its_blue"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="bottom"
            app:layout_constraintStart_toEndOf="@id/dot_location_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_start"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/dot_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_dot"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/dot_location_1"
            app:layout_constraintBottom_toTopOf="@id/dot_location_2"
            app:layout_constraintStart_toStartOf="@id/dot_location_1"
            app:layout_constraintEnd_toEndOf="@id/dot_location_1"/>

        <ImageView
            android:id="@+id/dot_location_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_location"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/et_pemberhentian_2"
            app:layout_constraintBottom_toBottomOf="@id/et_pemberhentian_2"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_pemberhentian_2"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="14dp"
            android:paddingStart="20dp"
            android:inputType="text"
            android:background="@drawable/et_border"
            android:backgroundTint="@color/its_grey"
            android:hint= "@string/kemanakah_anda_ingin_pergi"
            android:textColorHint="@color/its_blue"
            android:textColor="@color/its_blue"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="bottom"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/dot_location_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_pemberhentian_1"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtn_go"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/its_yellow"
        android:text="@string/go"
        android:textAllCaps="true"
        android:textColor="@color/its_blue"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_input_location" />

    <TextView
        android:id="@+id/place_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:text="@string/tempat_terdekat"
        android:textStyle="bold"
        android:textColor="@color/its_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mbtn_go"/>

    <Space
        android:id="@+id/sp_after_placenearby"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        app:layout_constraintTop_toBottomOf="@id/place_nearby"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_rv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/place_nearby"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="500dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/sp_after_placenearby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>