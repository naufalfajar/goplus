<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cv_direction"
    android:layout_margin="2dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_margin="18dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/civ_user"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/nav_grey"
            app:cardCornerRadius="12dp"
            android:src="@drawable/ic_launcher_background">
            <ImageView
                android:id="@+id/iv_modifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_straight_36"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/instruksi"
                    android:textColorHint="@color/its_blue"
                    android:textColor="@color/its_blue"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:hint="@string/name" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_distance"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/nav_grey"
            app:cardCornerRadius="12dp"
            android:src="@drawable/ic_launcher_background">
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/its_blue"
                android:textColorHint="@color/its_blue"
                android:hint="0 KM"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>