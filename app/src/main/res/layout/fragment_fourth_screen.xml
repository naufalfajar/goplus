<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/its_blue"
    tools:context=".view.onboarding.screen.FourthScreen">

    <TextView
        android:id="@+id/go_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:text="GO+"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/its_go_text"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:text="Mari keliling ITS dengan kami"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/its_white"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_title"/>


    <ImageView
        android:id="@+id/go_plus_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_onboarding_thanks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mbtn_continue"
        android:contentDescription="@string/gambar_eksplor" />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:text="@string/semoga_anda_dapat_membantu_teman_teman_disabilitas_dengan_aplikasi_ini_cheers"
        android:textColor="@color/its_go_text"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="37dp"
        android:backgroundTint="@color/its_yellow"
        app:cornerRadius="10dp"
        android:text="@string/eksplor"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/its_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>